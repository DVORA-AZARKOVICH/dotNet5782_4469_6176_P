<Window x:Class="PL.Password"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Password" Height="250" Width="300">
    <Window.Background>
        <ImageBrush ImageSource="/images/lit.PNG" Stretch="Fill" />
    </Window.Background>
    <Grid>
        <TextBlock Text="please enter the password:" HorizontalAlignment="Left" Margin="49,88,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="35" Width="101"/>
        <TextBlock HorizontalAlignment="Left" Margin="49,33,0,0" TextWrapping="Wrap" FontSize="25" Text="hello manager" VerticalAlignment="Top" Height="50" Width="199"/>
        <PasswordBox Name="password_text" HorizontalAlignment="Left" Margin="49,128,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Content="log in" HorizontalAlignment="Left" Margin="49,171,0,0" VerticalAlignment="Top" Click="Button_Click"/>

    </Grid>
</Window>
